<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText untuk memasukkan kata kunci pencarian -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan kata kunci"
        android:inputType="text"
        android:minHeight="48dp"
        android:minWidth="200dp" />

    <!-- Button untuk memulai pencarian -->
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cari"
        android:layout_marginTop="16dp" />

    <!-- TextView untuk menampilkan hasil pencarian -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil pencarian akan ditampilkan di sini"
        android:layout_marginTop="16dp"
        android:textColor="#000000" />

</LinearLayout>
